<div class="login-container box">
  <div class="login-card">
    <h2>Bienvenido de nuevo</h2>

    <form action="/login" method="POST" class="login-form">
      <div class="form-group">
        <label for="email">Correo:</label>
        <input
          id="email"
          type="email"
          name="email"
          placeholder="Tu correo"
          required
          autocomplete="email"
        />
      </div>
      <div class="form-group">
        <label for="password">Contraseña:</label>
        <input
          id="password"
          type="password"
          name="password"
          placeholder="Tu contraseña"
          required
          autocomplete="off"
        />
      </div>
      <button type="submit" class="button btn-login">Iniciar sesión</button>
    </form>
    <div class="login-links">
      <a href="/register" class="link">Crear una cuenta</a>
      <a href="/forgot-password" class="link">¿Olvidaste tu contraseña?</a>
      <!-- Botón para iniciar sesión con GitHub -->
      <a href="/github">
        <button type="button">Iniciar sesión con GitHub</button>
      </a>
    </div>
    {{#if error}}
      <div class="error-message">
        <p class="error-text">{{error}}</p>
        <a href="/register" class="btn-login">Regístrate aquí</a>
      </div>
    {{/if}}
  </div>
</div>